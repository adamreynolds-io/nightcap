{
  "name": "@nightcap/core",
  "version": "0.0.1",
  "description": "Core CLI framework for Nightcap",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nightcap": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "midnight",
    "blockchain",
    "cli",
    "nightcap"
  ],
  "author": "Midnight Network",
  "license": "Apache-2.0",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@nightcap/docker-orchestrator": "workspace:*",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
